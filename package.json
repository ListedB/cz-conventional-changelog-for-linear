{
  "name": "@listedb/cz-conventional-changelog-for-linear",
  "version": "1.0.0",
  "description": "Commitizen adapter following the conventional-changelog format and also asking for Linear issues.",
  "main": "index.js",
  "scripts": {
    "commit": "git-cz",
    "test": "mocha *.test.js",
    "format": "prettier --write *.js",
    "semantic-release": "semantic-release"
  },
  "homepage": "https://github.com/ListedB/cz-conventional-changelog-for-linear",
  "repository": {
    "type": "git",
    "url": "https://github.com/ListedB/cz-conventional-changelog-for-linear.git"
  },
  "engineStrict": true,
  "engines": {
    "node": ">= 10"
  },
  "author": "Taj English<taj.english@listedb.com>",
  "license": "MIT",
  "dependencies": {
    "boxen": "^5.1.2",
    "chalk": "^2.4.1",
    "commitizen": "^4.2.6",
    "cz-conventional-changelog": "^3.3.0",
    "inquirer": "^8.2.4",
    "lodash.map": "^4.5.1",
    "longest": "^2.0.1",
    "right-pad": "^1.0.1",
    "word-wrap": "^1.0.3"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.7",
    "chai": "^4.2.0",
    "cosmiconfig": "^5.2.1",
    "mocha": "^10.0.0",
    "mock-require": "^3.0.3",
    "prettier": "^1.15.3",
    "semantic-release": "^19.0.3",
    "semver": "^6.2.0"
  },
  "optionalDependencies": {
    "@commitlint/load": ">6.1.1"
  },
  "config": {
    "commitizen": {
      "path": "./index.js",
      "skipScope": true,
      "jiraPrefix": "ENG",
      "jiraPrepend": "[",
      "jiraAppend": "]"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
